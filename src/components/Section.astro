    }

    button::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 4px;
        background-color: white;
        color: white;
        bottom: 0;
        left: 0;
        transform-origin: top;
        transform: scaleY(0);
        transition: transform .3s ease-in-out;
    }

    button:hover::before {
        transform-origin: bottom;
        transform: scaleY(1);
        z-index: -1;
    }

    button:hover {
        color: black;
    }

    #div-icon {
        animation-name: anim;
        animation-duration: 3s;
        animation-delay: 1s;
        animation-fill-mode: forwards;
        animation-timing-function: ease-out;
