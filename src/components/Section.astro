---
import ChevronDownIcon from './icons/ChevronDownIcon.astro';

interface Props {
    img? : string;
    video? : string;
    h3 : string;
    h2 : string;
    button : string;
    color : string;
}

const { img, h3, h2, button, video, color } = Astro.props;
---

<section data-header-color={color} style={img} class="relative w-full h-screen bg-cover bg-center snap-center">
    <video autoplay muted loop id="myVideo" class="absolute size-full object-fill z-0">
        <source class="w-full h-full" src={video} type="video/mp4">
    </video>
    <div class="grid relative ml-10 p-3 max-w-md top-[50%] place-items-center sm:ml-20">
        <h3 class="block w-full text-white text-xl text-start opacity-0">{h3}</h3>
        <h2 class="block mt-1 w-full text-white text-5xl font-bold text-start opacity-0">{h2}</h2>
        <span id="btn-animation" class="flex mt-8 w-full float-left opacity-0">
            <button class="grid py-3 px-14 border-2 border-white text-white font-bold place-items-center">{button}</button>
        </span>
    </div>
    <div id="div-icon" class="grid absolute ml-[48%] size-12 top-[88%] place-items-center">
        <ChevronDownIcon/>
    </div>
</section>

